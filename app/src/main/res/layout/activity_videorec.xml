<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="me.fmy.galaxy_a7.VideorecActivity">


    <RelativeLayout
        android:id="@+id/wrap_cam_preview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/camera_preview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/wrap_cam_preview_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textColor="@color/colorWhite"
                android:id="@+id/txt_countdown_record"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="30sp"
                android:textSize="@dimen/generalFontSizeH1"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="@mipmap/bg_cd"
        android:orientation="vertical"
        android:id="@+id/wrap_count_down_prerecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recording starts in.."
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10"
            android:id="@+id/txt_countdown"
            android:textAlignment="center"
            android:textSize="84sp"
            android:textStyle="bold"
            android:textColor="@color/colorEditTextLight"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
